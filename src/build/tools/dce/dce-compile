# Usage: dce-compile [arguments...]
#
# This script runs the C++ compiler with the flags required for
# building Dynamic Code Execution (DCE) binaries. Invoke it like you
# would g++.
# Requires that the user be in a Hostboot workon.

if [[ ! "$PROJECT_ROOT" ]] ; then
    echo "$0: Must be inside a Hostboot workon" >&2
    exit 1
fi

set -e

SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )"

set -x

${CROSS_PREFIX}g++ $CXXFLAGS -D__HOSTBOOT_MODULE=DCE -DNO_INITIALIZER_LIST -DNO_PLAT_STD_STRING_SUPPORT -D__FAPI -DPLAT_NO_THREAD_LOCAL_STORAGE -s -nostartfiles -fPIC -Wl,-z,norelro -Wl,-z,max-page-size=1 -fno-zero-initialized-in-bss -I $PROJECT_ROOT/src/include -I $PROJECT_ROOT/src/include/usr -I $PROJECT_ROOT/src/subtree -I $PROJECT_ROOT/obj/genfiles -I $PROJECT_ROOT/src/import/hwpf/fapi2/include -I $PROJECT_ROOT/src/include/usr/fapi2 -I $PROJECT_ROOT/src/import/chips/p10/common/include $INCDIRS $INCDIRS_DCE -shared "$SCRIPT_DIR"/start.c++ "$@" -T "$SCRIPT_DIR/dce.ld"

